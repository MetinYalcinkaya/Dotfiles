# Eza #
#######
alias ls="eza --color=always --group-directories-first --no-filesize --no-time --no-permissions --no-user"
alias lst="eza --color=always --group-directories-first --tree --level=2"

#######
# Bat #
#######
alias cat="bat --paging=never"

##########
# cht.sh #
##########
alias wtf="xargs -I STRING cht.sh STRING <<<"
