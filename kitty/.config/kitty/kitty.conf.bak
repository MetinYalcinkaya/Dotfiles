# Font
font_size 16.0

font_family      Iosevka Light
bold_font        Iosevka ExtraBold
italic_font      Iosevka Light Italic
bold_italic_font Iosevka ExtraBold Italic

# Glyph map 
# symbol_map U+e000-U+e00a,U+ea60-U+ebeb,U+e0a0-U+e0c8,U+e0ca,U+e0cc-U+e0d4,U+e200-U+e2a9,U+e300-U+e3e3,U+e5fa-U+e6b1,U+e700-U+e7c5,U+f000-U+f2e0,U+f300-U+f372,U+f400-U+f532,U+f0001-U+f1af0 Symbols Nerd Font Mono
symbol_map U+e000-U+e00a,U+ea60-U+ebeb,U+e0a0-U+e0c8,U+e0ca,U+e0cc-U+e0d4,U+e200-U+e2a9,U+e300-U+e3e3,U+e5fa-U+e6b1,U+e700-U+e7c5,U+f000-U+f2e0,U+f300-U+f372,U+f400-U+f532,U+f0001-U+f1af0 Symbols Nerd Font
symbol_map U+E0A0-U+E0A3,U+E0C0-U+E0C7 PowerlineSymbols

# Scrollback Lines
scrollback_lines 10000

# Auto attach to tmux
# shell zsh --login -c "tmux attach || tmux"

# Performance
input_delay 1
repaint_delay 1
sync_to_monitor yes

# Window
hide_window_decorations yes

# Cursor
cursor_shape block
cursor_blink_interval 0
# cursor_beam_thickness 10
#shell_integration no-cursor

# Close prompt
confirm_os_window_close 0

# Theme
# BEGIN_KITTY_THEME
# Tokyo Night Moon
include current-theme.conf
# END_KITTY_THEME

# Window opacity 
background_opacity 1

# Bindings
# Clears all keybinds
clear_all_shortcuts yes

map cmd+q quit
map cmd+h hide_macos_app
map cmd+m minimize_macos_window
map cmd+c       copy_to_clipboard
map cmd+v       paste_from_clipboard
map cmd+,        edit_config_file
map ctrl+cmd+,   load_config_file
map cmd+n       new_os_window
map cmd+w       close_os_window
